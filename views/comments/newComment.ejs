<% include ../partials/header %>
   <div class="container">
      <div class="row">
          <h1 style="text-align:center">Add new Comment to <%= camp.name%></h1>
         <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
            <div style="margin:25px auto;width:30%;">   
               <div class="form-group">
                  <input class="form-control" type="text" name="comment[text]" placeholder="New Comment">
               </div>
               <div class="form-group">
                  <input type="submit" value="Add Comment" class="btn btn-primary btn-lg btn-block">   
               </div>
                  <div class="text-center">
                     <a href="/campgrounds/<%=camp._id%>">back</a>
                  </div>
            </div>
         </form>
      </div>
   </div>
   
<% include ../partials/footer %>
